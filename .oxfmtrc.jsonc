{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  // Formatting options
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  // Ignore patterns
  "ignorePatterns": ["dist", "node_modules", "*.d.ts"]
}
